---
import FakeOverflow from "../assets/fake_overflow.png";
import SafariZone from "../assets/safari_zone.png";
import Autopsy from "../assets/autopsy.png";
import ProjectSection from "./ProjectSection.astro";
---

<main class="max-w-7xl mx-auto p-4" id="projects">
  <h1 class="text-3xl font-bold mb-8 divider divider-primary">Projects</h1>
  <ProjectSection
    title="Fake Overflow"
    timeline="April 2024 - May 2024"
    imageSrc={FakeOverflow}
    description="A simplified clone of Stack Overflow built with the MERN stack. It features user authentication, question posting, answer submission, tag searching, and voting functionality."
    demoLink="https://fake-overflow-site.onrender.com/"
    sourceLink="https://github.com/alkmei/fake-overflow"
  />
  <ProjectSection
    title="Safari Zone"
    timeline="November 2022"
    imageSrc={SafariZone}
    description="A Vue 3 app that allows users to catch and take care of different PokÃ©mon."
    demoLink="https://safari-zone.netlify.app"
    sourceLink="https://github.com/alkmei/vue-project-2-jasvinmondianaytha"
  />
  <ProjectSection
    title="Autopsy"
    timeline="April 2024 - May 2024"
    imageSrc={Autopsy}
    description="A web game built using Typescript and our professor's custom game engine called Wolfie2d. The game engine was designed to be as barebones as possible."
    demoLink="https://autopsy-32c5e.web.app/"
    sourceLink="https://github.com/alkmei/autopsy-wolfie2d"
  />
</main>
